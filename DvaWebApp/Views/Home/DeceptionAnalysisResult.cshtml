@using DvaAnalysis.Models
@{
    ViewBag.Title = "Deception Analysis";
}
<h2>@ViewBag.Title</h2>
<div class="well">
    <div class="container-fluid">
        <div class="col-sm-12">
            <h3>Accuracy</h3>
            <h4>@(Math.Round(ViewBag.ClassifierResult.Accuracy * 100, 1) + "%")</h4>
        </div>
    </div>
    <div class="container-fluid">
        <div class="col-sm-6">
            <h3>Truthful precision</h3>
            <h4>@(Math.Round(ViewBag.ClassifierResult.TruthfulPrecision * 100, 1) + "%")</h4>
        </div>
        <div class="col-sm-6">
            <h3>Truthful recall</h3>
            <h4>@(Math.Round(ViewBag.ClassifierResult.TruthfulRecall * 100, 1) + "%")</h4>
        </div>
    </div>
    <div class="container-fluid">
        <div class="col-sm-6">
            <h3>Deceitful precision</h3>
            <h4>@(Math.Round(ViewBag.ClassifierResult.DeceitfulPrecision * 100, 1) + "%")</h4>
        </div>
        <div class="col-sm-6">
            <h3>Deceitful recall</h3>
            <h4>@(Math.Round(ViewBag.ClassifierResult.DeceitfulRecall * 100, 1) + "%")</h4>
        </div>
    </div>
</div>
