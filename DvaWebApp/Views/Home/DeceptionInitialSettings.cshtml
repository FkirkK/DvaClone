@model DvaWebApp.Models.DeceptionInitialSettingsModel
@{
    ViewData["Title"] = "Initial Settings";
}

<div class="row">
    <div class="col-md-4">
        <h2>@ViewBag.Title</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        <p style="font-size: 16px">A committee is a way to combine output from different classifiers given the same input to obtain a single better classification. 
            It is possible to choose between a Majority Committee or Weighted Committee. The Majority Committee (ensemble averaging) runs each 
            deception detection algorithm and decides the documents truthfulness based on what the majority of the algorithms classify. If the 
            Weighted Committee is chosen, it assigns weights to the specific algorithms. So if an algorithm is known to be very precise, it is given 
            a larger weight to let the algorithm dominate the results.</p>
    </div>
</div>
<br />
<script type="text/javascript" src="@Url.Content("~/js/DeceptionInitialSettingsScript.js")"></script>


<form method="post">
    <div class="row">
        <div class="col-md-4 col-md-offset-2">
            <h4>Select number of algorithms to run: </h4>
        </div>
        <div class="col-md-4">
            @(Html.DropDownListFor(x => x.SelectedAlgorithmCount, new SelectList(new string[] { "1", "2", "3", "4", "5" }), "Select number of algorithms to run", new { @id = "AlgorithmCountDropDown", @class = "form-control" }))
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-2">
            <h4>Select committee: </h4>
        </div>
        <div class="col-md-4">
            @(Html.DropDownListFor(x => x.SelectedCommittee, Model.CommitteeList, "Select committee", new { @id = "CommitteeDropDown", @class = "form-control" }))
        </div>
    </div>
    <div class="row">
        <div class="col-md-7 col-md-offset-2"></div>
        <div class="col-md-1">
            <input id="Submit" type="submit" class="btn btn-default pull-right" value="Continue" formaction="DeceptionAnalysis", disabled="disabled"/>
        </div>
    </div>
</form>
